---
const navLinks = [
  { label: "About", href: "#about" },
  { label: "Services", href: "#services" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-navy-950/80 backdrop-blur-md border-b border-navy-700/50">
  <nav class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
    <a href="/" class="text-lg font-bold text-white">Mamoru Shiba</a>
    <ul class="flex items-center gap-6">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm font-medium text-slate-300 transition-colors hover:text-accent-400"
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
