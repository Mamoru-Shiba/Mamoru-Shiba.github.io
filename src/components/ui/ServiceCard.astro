---
interface Props {
  title: string;
  description: string;
  url: string;
  icon: string;
}

const { title, description, url, icon } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="group block rounded-xl border border-navy-700/50 bg-navy-900/50 p-6 transition-colors hover:border-accent-500/50 hover:bg-navy-800/50"
>
  <span class="text-3xl">{icon}</span>
  <h3 class="mt-3 text-lg font-semibold text-white group-hover:text-accent-400 transition-colors">
    {title}
  </h3>
  <p class="mt-2 text-sm leading-relaxed text-slate-400">
    {description}
  </p>
</a>
